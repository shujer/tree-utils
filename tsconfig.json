{
  "compilerOptions": {
    "outDir": "dist",
    "strict": true,
    "target": "ES2015",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true
  },
  "include": ["src"]
}
